<% if @article.errors.any? %>
<h2> the following errors prevent the article from being created </h2>
<ul>
<% @article.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
</ul>

<% end %>

<%= form_for @article do |f| %>
<p>
  <%= f.label :title %> <br>
  <%= f.text_field :title %>
</p>

<p>
  <%= f.label :desription %> <br>
  <%= f.text_field :desription %>
</p>

<p>
<%= f.submit  %> <br>
</p>

<% end %>

<%= link_to "Back to articles listing", articles_path %>
